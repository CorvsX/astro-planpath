---
const { name, slogan, srcImg } = Astro.props;
const alt = `Foto de ${name}`;
---

<div class="admin-card">
    <img class="admin-photos" src={srcImg} alt={alt} />
    <div class="admin-overlay">
        <p class="admin-name">{name}</p>
        <p class="admin-slogan">{slogan}</p>
    </div>
</div>

<style>
.admin-card {
    position: relative;
    width: 220px;
    height: 220px;
    overflow: hidden;
    border-radius: 50%;
    margin: 10px;
    transition: box-shadow 0.5s ease, transform 0.5s ease;
    cursor: pointer;
}
.admin-card:hover {
    transform: scale(1.2);
    box-shadow: 0 20px 40px rgb(0 0 0 / 50%);
}
.admin-photos {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: filter 0.7s ease, transform 0.7s ease;
}
.admin-card:hover .admin-photos {
    filter: grayscale(0) brightness(1.2);
    transform: scale(1.1);
}

.admin-overlay {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgb(0 0 0 / 0%) 0%, rgb(0 0 0 / 75%) 100%);
    color: white;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    opacity: 0%;
    transition: opacity 0.5s ease, top 0.5s ease, transform 0.7s ease;
    border-radius: 50%;
}

.admin-card:hover .admin-overlay {
    opacity: 100%;
    top: 0;
    transform: scale(1.1);
}
.admin-name {
    font-size: 1.5rem;
    font-weight: bold;
    animation: popin 0.6s ease-out;
    transition: all 0.3s ease-in-out;
}
.admin-slogan {
    font-size: 1rem;
    margin-top: 10px;
    animation: slideupfade 0.6s ease-out 0.2s;
    transition: all 0.3s ease-in-out;
}


    
@keyframes popin {
    0% {
    transform: scale(0.8);
    opacity: 0%;
    }

    100% {
    transform: scale(1);
    opacity: 100%;
    }
}
    
@keyframes slideupfade {
    0% {
    transform: translateY(20px);
    opacity: 0%;
    }

    100% {
    transform: translateY(0);
    opacity: 100%;
    }
}

@media (width <= 480px) {
    .admin-card {
        width: 150px;
        height: 150px;
    }
}
</style>