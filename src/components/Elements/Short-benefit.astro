---
const { text, srcImg, altImg } = Astro.props;
---

<div class="short-benefit">
    <img class="sbenefit-photos" src={srcImg} alt={altImg}>
    <p class="short-benefit-text">{text}</p>
</div>

<style>
.short-benefit {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-height: 275px;
    background-color: var(--divbgcolor);
    border-radius: 12px;
    padding: 10px;
    text-align: center;

    & .sbenefit-photos {
    width: 100%;
    height: 100%;
    max-height: 210px;
    object-fit: contain;
    border-radius: 12px;
    }

    & .short-benefit-text {
    max-width: 80%;
    margin: 0;
    padding-top: 10px;
    }
}
</style>