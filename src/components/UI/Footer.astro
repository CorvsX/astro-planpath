---
import SocialLink from "../Elements/Social-link.astro"
import socialmedias from '../../data/social-links-data.json';       
import { Icon } from 'astro-icon/components'

---

<footer>
    <div class="footer-container">
        <div class="footer-logo">
            <span>Plan Path</span>
        </div>

        <div class="footer-nav">
            <a href="#">Inicio</a>
            <a href="#about-us">Sobre Nosotros</a>
            <a href="mailto:planpath2024@gmail.com">Contáctanos</a>
            <a href="#">Legal</a>
        </div>

        <div class="footer-social">
            { socialmedias.map(socialmedia => (<SocialLink url={socialmedia.url} name={socialmedia.name} colorAccent={socialmedia.colorAccent} />) ) }
        </div>
    </div>
    <div class="footer-bottom">
        <p>© 2024 Plan Path. Todos los derechos reservados.</p>
        
        <a href="#" class="arrowup" aria-label="Flecha para volver a menú">
            <svg version="1.1" id="icons_1_" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 0 128 128"
                style="enable-background:new 0 0 128 128" xml:space="preserve">
                <style>
                .st0 {
                    display: none
                }

                .st1 {
                    display: inline
                }

    <div class="footer-bottom">
        <p>© 2024 Plan Path. Todos los derechos reservados.</p>
        <a href="#" class="arrowup" aria-label="Flecha para volver a menú">
            <Icon name="arrowup"/>
        </a>
    </div>
</footer>
<style>
    
footer {
    background: linear-gradient(45deg, rgb(255 255 255 / 56.8%), rgb(200 200 200 / 50.7%), rgb(150 150 150 / 49.3%));
    color: var(--gen-title-color);
    padding: 20px 0;
    font-family: Roboto, sans-serif;

    & .footer-container {
        display: flex; 
        justify-content: space-between; 
        align-items: center;
        max-width: 1200px; 
        margin: 0 auto;
        padding: 20px;
        border-bottom: 1px solid #444;
    }

    .footer-logo {
        margin-bottom: 20px;
        font-size: 1.5rem;
        font-weight: bold;
        text-transform: uppercase;
        font-family: "Karina media", sans-serif;
    }

    .footer-nav {
        display: flex;
        gap: 15px;
    
        a {
        color: var(--gen-title-color);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease, text-shadow 0.3s ease;
        }
    
        a:hover {
        color: black;
        text-shadow: 0 0 5px rgb(0 0 0 / 30%);
        }
    }

    .footer-social {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }

    .footer-bottom {
        text-align: center;
        font-size: 0.8rem;
        color: grey;
        margin-top: 20px;
        padding-top: 10px;


        [data-icon="arrowup"] {
            font-size: 1.5rem;
            opacity: 60%;
            transition: transform 0.6s ease, opacity 0.6s ease;
        }

        [data-icon="arrowup"]:hover {
            transform: scale(1.4);
            transition: transform 0.6s ease 0.09s;
            opacity: 80%;
        }
    }
}
@media (width <= 800px) {
    footer .footer-container {
        flex-direction: column;
        align-items: center;
        padding: 20px;
    }

    .footer-nav {
        flex-direction: column;
        gap: 10px;
        text-align: center;
    }

    .footer-social {
        justify-content: center;
        gap: 20px;
    }
}

@media (width <= 480px) {
    footer .footer-logo {
        font-size: 1.2rem;
    }

    .footer-nav a {
        font-size: 0.8rem;
    }
}

    .footer-bottom {
        font-size: 0.7rem;
    }

    .footer-social {
        gap: 15px;
    }
}
</style>