---
import MainButton from "../Elements/Main-button.astro";
---

<header>
  <div class="header-content">
    <div class="logo">
      <img src="/img/isologo-plan-path.svg" alt="Logotipo PlanPath" />
    </div>
    <div class="info">
      <h2>Organiza tus viajes de manera divertida y eficiente</h2>
      <MainButton innerText="Comienza a crear tus planes aquÃ­" />
    </div>
  </div>
</header>

<style>
  header {
    height: max-content;
    width: 100%;
    height: 90vh;
    background-color: var(--white);
    color: var(--gen-title-color);
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;

    .header-content {
      display: flex;
      margin-top: 20vh;      
      flex-direction: column;
      align-content: center;
      justify-content: center;
      .logo img {
        width: 50vw;
        height: auto;
      }
    }
  }

  @media (width <= 800px) {
    header {
      .header-content {
        .logo img {
          width: 45vh;
          height: auto;
        }
      }
    }
  }
</style>


