<div class="nav-bar">

  <a href="https://planpath.tech">
    <img src="/img/isotipo-bg-plan-path.svg" alt="Isotipo PlanPath" />
  </a>

  <nav>
    <ul>
      <li><a href="#" class="nav-button">Inicio</a></li>
      <li><a href="#about-app" class="nav-button" data-scroll>Sobre la app</a></li>
      <li><a href="#about-us" class="nav-button" data-scroll>Nosotros</a></li>
      <li><a href="https://app.planpath.tech" class="nav-button nav-main-button">¡Planifica ya!</a></li>
    </ul>
  </nav>

  <button class="menu-toggle" aria-label="Abrir menú">
    <img class="menu-svg" src="/img/burger-menu.svg" alt="" />
  </button>
</div>

<style>
  .nav-bar {
    position: sticky;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    background-color: var(--bg-nav-bar);
    color: var(--gen-title-color);
    width: 100%;
    text-align: center;
    align-items: center;
    top: 0;
    opacity: 95%;
    z-index: 1;
    border-bottom: 0.2rem solid;

    img {
      margin-left: 4rem;
    }

    nav {
      padding: 0.8rem;

      ul {
        list-style: none;
        display: flex;
        flex-direction: row;
        justify-content: space-around;
        align-items: center;
        gap: 1.4rem;
      }

      .nav-button {
        color: var(--gen-title-color);
        padding: 1rem;
        border: 0.15rem solid var(--bg-nav-bar);
        text-decoration: none;
        border-radius: 12px;

        &.nav-main-button {
          background-color: var(--gen-title-color);
          color: var(--white);
          border: 0.15rem solid var(--gen-title-color);
        }
      }

      .nav-button:hover {
        background-color: var(--gen-title-color);
        color: var(--white);
        border: 0.15rem solid var(--gen-title-color);
        border-radius: 12px;

        &.nav-main-button {
          background-color: var(--div-letter-color);
          color: var(--gen-title-color);
          border: 0.15rem solid var(--gen-title-color);
          border-radius: 12px;
        }
      }
    }
    .menu-svg {
      width: 3.5rem;
      fill: var(--gen-title-color);
      color: var(--gen-title-color);
    }
  }

  .menu-toggle {
    display: none;
    font-size: 2rem;
    background: none;
    border: none;
    color: var(--gen-title-color);
    cursor: pointer;
  }

  @media (width <= 800px) {
    .nav-bar {
      flex-direction: row;
      justify-content: space-between;
      padding: 1rem 0;

      .menu-toggle {
        display: block;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      img,
      .menu-toggle {
        margin-left: 4rem;
        margin-right: 2rem;
      }

      & a {
        color: var(--gen-title-color);
        text-decoration: none;
        font-size: 18px;
        transition: color 0.3s ease;
      }

      nav {
        display: none;
        width: 50%;
        flex-direction: column;
        position: absolute;
        top: 100%;
        right: 0;
        z-index: 3;
        background-color: #f2f7fb;
        opacity: 90%;
        border-bottom-left-radius: 2rem;

        ul {
          flex-direction: column;
          gap: 1rem;
          width: 60%;

          li {
            width: 100%;
          }

          a {
            display: block;
            width: 100%;
            text-align: center;
          }
        }
      }
    }

    .nav-bar.active nav {
      display: flex;
    }
  }
</style>

<script>
  function addAllEventListeners() {
    const menuToggle = document.querySelector(".menu-toggle");
    const navBar = document.querySelector(".nav-bar");
    const navLinks = document.querySelectorAll(".nav-button");


    document.addEventListener("DOMContentLoaded", () => {
      menuToggle.addEventListener("click", () => {
        navBar.classList.toggle("active");
      });

      navLinks.forEach((link) => {
        link.addEventListener("click", function () {
          navBar.classList.remove("active");
        });
      });

      const navHeight = navBar.offsetHeight;
      const links = document.querySelectorAll('a[data-scroll]');

      links.forEach(link => {
      link.addEventListener('click', (event) => {
        const targetId = link.getAttribute('href');
        if (targetId.startsWith('#')) {
          event.preventDefault();
          const targetElement = document.querySelector(targetId);
          if (targetElement) {
            const targetPosition = targetElement.getBoundingClientRect().top + window.scrollY - navHeight;
            window.scrollTo({
              top: targetPosition,
              behavior: 'smooth'
            });
          }
        }
      });
    });
    });
  }
  addAllEventListeners();
</script>
